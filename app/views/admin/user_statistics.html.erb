<%= javascript_include_tag "courses/content", "data-turbolinks-track" => true %>

<div id="container" style="min-width: 310px; height: 400px; max-width: 1000px; margin: 0 auto"></div>
<hr>

<script>

$(function () {
  $('#container').highcharts({
    chart: {
      type: 'column'
    },
    title: {
      text: '使用者註冊統計'
    },
    subtitle: {
      text: ''
    },
    xAxis: {
      categories: <%=raw @sta.keys.to_json%>        
    },
    yAxis: {
      min: 0,
      title: {
        text: '人數'
      }
    },
    tooltip: {
      headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
      pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
        '<td style="padding:0"><b>{point.y} 人</b></td></tr>',
      footerFormat: '</table>',
      shared: true,
      useHTML: true
    },
    plotOptions: {
      column: {
        pointPadding: 0.2,
        borderWidth: 0
      }
    },
    series: [{
      name: '月份',
      data: <%=raw @sta.values.to_json%>
    }]
  });
});

</script>