<script>
	function clean_input(obj){
		obj.next().val("");
		$("#search").click();
	}
	$(function(){
		var dept_sel=[];
		dept_sel['3']='<%=j options_from_collection_for_select(Department.where(:degree=>'3', :dept_type=>"dept"),'id','ch_name')%>'
		dept_sel['2']='<%=j options_from_collection_for_select(Department.where(:degree=>'2', :dept_type=>"dept"),'id','ch_name')%>'
		dept_sel['0']='<%=j options_from_collection_for_select(Department.where(:degree=>['0','5']),'id','ch_name')%>'
		$("#degree").change(function(){
			
			$("#q_course_department_id_eq").html(dept_sel[$(this).val()]);
			
		});
	});
</script>