

<div class="panel panel-primary" >
	<div class="panel-heading" >
		<h4 class="text-center"><%=latest_semester.name%></h4>
	</div>
	<br>
	<div class="row">	
		<div  class="col-md-8">
			<%= render :partial=> "/user/dept_form"%>
			<h4 id="user_info" class="text-center">
				<% if !@user.department.nil? && !@user.semester.nil? %>
				<%=@user.department.ch_name%> <%sem=@user.semester.name%>
				<% if @user.department.degree=="3" %>
					<%=sem[0..sem.length-2].to_i+4%>級 
				<% end %>
				<!--
					<% unless @user.department.credit.nil? %>
					畢業學分:<strong><%=@user.department.credit %></strong>	
					<% end %>
				-->
				<% end %>
			</h4>
		</div>
		<div class="col-md-4"><% unless @user.department.nil? %>
			<button class="btn btn-success" onclick="show_form($(this));">修改系級</button>
		<% end %>
		<%=link_to "/courses/simulation", class:"btn btn-primary" ,id: "add_course" do %>
			<%=fa_icon "plus" %>新增課程
		<% end %>
		<%=link_to @user.department.present? ? "/user/import_course":"javascript:void(0);" , class:"btn btn-primary",id:"import_course", onclick:"no_dept_alert();" do %>
			<%=fa_icon "upload" %>匯入課程
		<% end %>
			
		</div>
	</div>
	<br>
	<%= render :partial=>"/user/table_list_by_costype", locals: {cs_mixed: @cs_this, table_class:"this_sem_table"} %>
</div>


<script>
<% if @user.department.nil? %>
	function no_dept_alert(){	
		alert('請先輸入系級,謝謝!');
		$('#degree_select').focus();
	}
<% end %>
