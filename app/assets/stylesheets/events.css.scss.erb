@import "application";
@import "events_component";

/*************
	layout
*************/
.layout-content{
	background-color: rgba(226, 226, 226, 0.7);
}

/*************
	module
**************/

/*------------------------
	banner
------------------------*/

.events-banner{
	@extend .container;
}

.banner__inner{
	@extend .item;
	width: auto;
	height: 300px;
}

.banner__image{
	@extend .center-block;
	width: auto;
	height: 95%;
}

.banner__caption{
	@extend .carousel-caption;
	font-size: 24px;
}

// redefine the banner color
.carousel-control.left{
	left: 5%;
} 

.carousel-control.right {
	right: 5%;
}

.carousel-control.left, .carousel-control.right {
    background-image: none;
	background-color: #a1a3a4;
	width: 5%;
	height: 20%;
	position: absolute;
	top: 40%;
}

/*------------------------
	form
------------------------*/

.form-wrapper{
    padding: 10px;
    height: auto;
	background-color: rgba(100, 100, 100, 0.7);
}

.control-wrapper{
	padding-bottom: 10px;
	padding-top: 10px;
}

/*------------------------
	event-block group 
	attributes
------------------------*/

.events-block{
	@extend .center-block;
	margin-bottom: 20px;
	background-image: url(<%=asset_path("events/bg_symphony.png")%>);
}

#event-block1{
	background-image: url(<%=asset_path("events/bg-geometry.png")%>);
}

#event-block2{
	background-image: url(<%=asset_path("events/bg_symphony.png")%>);
}

.events--theme{
	position: absolute;
	left: 0px;
	width: 100%;
	//z-index: -1;
}


.theme-events--swirl{
	@extend .events--theme;
	background-image: url(<%=asset_path("events/bg_swirl.png")%>);
	//linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 70%);
	//background: #66ccff;
	//background: #ffcc99;
}
.theme-events--pinkrice{
	@extend .events--theme;
	background-image: url(<%=asset_path("events/bg_pinkRice.png")%>);
	//linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 70%);
	//background: #66ccff;
}


/*------------------------
	individual 
	event-block 
	attributes
------------------------*/
.event-block-wrapper{
	margin-bottom: 15px;
	padding: 3px;
}

.event-block{
	background: rgba(255, 255, 255, 0.7);
	margin: 1px 3px;
	padding: 20px 10px 10px;
	font-size: 16px;
}

.event-block__theme--today{
	//border:2px solid #f8d4d4;
	//background: rgba(255, 249, 171, 0.4);
	background: rgba(255, 255, 255, 0.7);
	border:0px solid #f8d4d4;
}
.event-block__theme--past{
	//border:2px solid #d1d1e0;
	background: rgba(209, 209, 224, 0.4);
	border:0px solid #d1d1e0;
}
.event-block__theme--future{
	//border:2px solid #c1eaff;
	background: rgba(193, 234, 255, 0.4);
	border:0px solid #c1eaff;
}

.event-block__top{
	padding: 3px 3px;
}
.event-block__bottom{
	border: 2px 0 0 0 solid #c1eaff;
}

.event-title {
	border-bottom: 1px solid #ccc;
	font-size: 18px;
	height: 3.5em;
	margin: 0 0 5px 0; 
	overflow: hidden;
	padding: 7px 0;
}

.event-info {
	color: #555;
	height: 4em;
	overflow: hidden;
}

.info-item {
    padding-left: 2.5em;
    text-indent:-2.1em;
}

.event-image{
	@extend .img-responsive;
	@extend .img-rounded;
	height: 120px;
	width: 250px;
}
.event-date{
	@extend .text-right;
	//@extend .flag;
	position: absolute;
	padding: 2px 2px;
	height: 15%;
	top: 3px;
	bottom: auto;
	right: 5%;
	font-size: 16px;
	font-weight: bold;
}

.event-date__theme--today{
	color: #5BA1DC;
	//background: #f8d4d4;
}
.event-date__theme--past {
	color: gray;
	//background: #d1d1e0;
}
.event-date__theme--future{
	color: #5BA1DC;
	//background: #ccf1ff; 
}

.event-type{
	//@extend .text-right;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	font-size: 16px
}

.flag {  /* origin from css-tricks.com, via Zoe Rooney */
	width: 60px; 
	height: 36px; 
	padding: 3px 5px;
} 

.flag:after { /* origin from css-tricks.com, via Zoe Rooney */
	content: ""; 
	position: absolute; 
	left: 0; bottom: 0; width: 0; height: 0; 
	border-bottom: 10px solid white; 
	border-left: 30px solid transparent; 
	border-right: 30px solid transparent; 
}

.wrapper{
	vertical-align: middle;
}
