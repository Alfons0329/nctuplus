@import "application";


/*************
	layout
*************/
.layout-content{
	@extend .container;
	@extend .center-block;
}



/*************
	module
**************/
.layout-content > .form{
	height: auto;
	margin: 30px auto;
	padding: 3px 3px;
}

.form-wapper{
	@extend .container;
	margin: 30px auto;
}

/*------------------------
	banner
------------------------*/

.banner__inner{
	@extend .item;
	width: auto;
	height: 300px;
}

.banner__image{
	@extend .center-block;
	width: auto;
	height: 95%;
}

.banner__caption{
	@extend .carousel-caption;
	font-size: 24px;
}


/*------------------------
	event-block group 
	attributes
------------------------*/

.events--container{
	@extend .container;
	@extend .center-block;
	@extend .row;
}
.events--theme{
	@extend .container;
	@extend .col-md-12;
	
}

