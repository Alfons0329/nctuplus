/*------------------------
	individual 
	event-block 
	attributes
------------------------*/
.event-block{
	@extend .col-md-3;
	background: rgba(255, 255, 255, 0.7);
	height: 200px;
	margin: 20px 20px;
	padding: 20px 20px;
	font-size: 16px;
}

.event-block__theme--today{
	border:2px solid #f8d4d4;
}

.event-block__theme--past{
	border:2px solid #d1d1e0;
}

.event-block__theme--future{
	border:2px solid #c1eaff;
}

.event-block__top{
	padding: 3px 3px;
}
.event-block__bottom{
	border: 2px 0 0 0 solid #c1eaff;
}

.flag {  /* origin from css-tricks.com, via Zoe Rooney */
	width: 60px; 
	height: 36px; 
	padding: 3px 5px;
} 

.flag:after { /* origin from css-tricks.com, via Zoe Rooney */
	content: ""; 
	position: absolute; 
	left: 0; bottom: 0; width: 0; height: 0; 
	border-bottom: 10px solid white; 
	border-left: 30px solid transparent; 
	border-right: 30px solid transparent; 
}
.event-date{
	@extend .text-right;
	//@extend .flag;
	position: absolute;
	pagging: 2px 2px;
	height: 15%;
	top: -15px;
	bottom: auto;
	right: 5%;
	font-size: 16px;
}
.event-date__theme--today{
	color: #ff3838;
	background: #f8d4d4;
}
.event-date__theme--past {
	color: gray;
	background: #d1d1e0;
}
.event-date__theme--future{
	background: #ccf1ff; 
}
.event-type{
	//@extend .text-right;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	font-size: 16px
}
.wrapper{
	vertical-align: middle;
}

.event-title{
	display: inline-block;
}
.event-location{
	//@extend .pull-right;
	position: absolute;
	display: overflow;
	bottom: 10px;
	right: 20px;
}
.event-image{
	@extend .img-responsive;
	@extend .img-rounded;
	height: 120px;
	width: 250px;
}
