@import "application";
@import "events_component";

/*************
	layout
*************/
.layout-content{
	@extend .container;
	@extend .center-block;
}

/*************
	module
**************/
.form-wapper{
	@extend .container;
	@extend .row;
	margin: 30px auto;
	padding: 3px 3px;
}

/*------------------------
	banner
------------------------*/

.banner__inner{
	@extend .item;
	width: auto;
	height: 300px;
}

.banner__image{
	@extend .center-block;
	width: auto;
	height: 95%;
}

.banner__caption{
	@extend .carousel-caption;
	font-size: 24px;
}

// redefine the banner color
.carousel-control.left{
	left: 5%;
} 

.carousel-control.right {
	right: 5%;
}

.carousel-control.left, .carousel-control.right {
    background-image: none;
	background-color: #a1a3a4;
	width: 5%;
	height: 20%;
	position: absolute;
	top: 40%;
}

/*------------------------
	event-block group 
	attributes
------------------------*/
