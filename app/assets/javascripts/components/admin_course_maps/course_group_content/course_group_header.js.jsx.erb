var CourseGroupHeader = React.createClass({	

	render: function(){
		
		var gtype = (this.props.gtype==0) ;
		var classes = "form-control btn-" + ( gtype ? "warning" : "info" );

		var gtype_button = (
			<button className={classes} onClick={this.props.changeGtype} >
				{(gtype ? "代表" : "抵免")}
			</button>);
			
		return (
			<Row>
				<div className="col-md-2 col-md-offset-1">代表:</div>
				<div className="col-md-3 ">{this.props.leader_name || "未選代表課"}</div>
				<div className="col-md-2">類型:</div>
				<div className="col-md-2">{gtype_button}</div> 	
				<div className="col-md-1">
					<button type="button" 
						className="btn btn-circle btn-danger"
						onClick={this.props.deleteCourseGroup}
					>
						<i className="fa fa-trash-o"></i>
					</button>
				</div> 	
			</Row>
		);
	}
});